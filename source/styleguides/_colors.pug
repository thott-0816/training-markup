//-------------------------------------------------------
//- Styleguides :: Colors
//-------------------------------------------------------

-
  var colors = [
    { key: '$white', color: '#fff' },
    { key: '$black', color: '#000' },
    { key: '$primary', color: '#419de0' },
    { key: '$orange', color: '#f09502' },
    { key: '$light-gray', color: '#ccc' },
  ];

.row
  each val in colors
    .col-2
      .code-example
        .demo(style=`background-color: ${val.color}; width: 100%; height: 100px`)
        pre
          code
            | #{val.key}: #{val.color}
